{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "world",
                    "roles": [
                        {
                            "name": "app",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": false
                                }
                            ]
                        },
                        {
                            "name": "user",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": false
                                },
                                {
                                    "uri": "user.*",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": false
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "universal",
                    "endpoint": {
                        "type": "tcp",
                        "port": "$PORT"
                    },
                    "websocket": {
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "ticket": {
                                    "type": "static",
                                    "principals": {
                                        "authenticator": {"ticket": "sou uma app", "role": "app"},
                                        "test": {"ticket": "sou uma app", "role": "app"},
                                        "frontend": {"ticket": "sou um usuario", "role": "user"}
                                    }
                                }
                            }
                        }
                    },
                    "web": {
                        "paths": {
                            "/": {
                                "type": "static",
                                "directory": "../web",
                                "options": {"enable_directory_listing": false}
                            },
                            "info": {"type": "nodeinfo"},
                            "ws": {"type": "websocket"}
                        }
                    }
                }
            ]
        },
        {
            "type": "guest",
            "executable": "python3",
            "arguments": ["-m", "authenticator"],
            "options": {"workdir": ".."}
        }
    ]
}
